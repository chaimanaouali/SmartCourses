# Django Settings
SECRET_KEY=your_secret_key_here
DEBUG=True

# AI Service API Keys
# Groq API (for transcription and text generation - recommended)
GROQ_API_KEY=your_groq_api_key_here
GROQ_WHISPER_MODEL=whisper-large-v3
GROQ_LLM_MODEL=mixtral-8x7b-32768

# Google/Gemini API (optional fallback for text generation)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (for image generation)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API (alternative image generation)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Stability AI API (alternative image generation)
STABILITY_API_KEY=your_stability_api_key_here

# Model Configuration
WHISPER_MODEL=base
LLM_TEMPERATURE=0.2

# Database (optional, defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis (for Celery in production)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
